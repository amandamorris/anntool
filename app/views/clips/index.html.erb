<h1>Listing clips</h1>

<table>
  <tr>
    <th>Page url</th>
    <th>Download url</th>
    <th>Synopsis</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @clips.each do |clip| %>
  <tr>
    <td><%= clip.page_url %></td>
    <td><%= clip.download_url %></td>
    <td><%= clip.synopsis %></td>
    <td><%= link_to 'Show', clip %></td>
    <td><%= link_to 'Edit', edit_clip_path(clip) %></td>
    <td><%= link_to 'Destroy', clip, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

